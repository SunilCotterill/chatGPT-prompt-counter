{
  "name": "ChatGPT Prompt Counter",
  "description": "A chrome extension to track the number of ChatGPT prompts used",
  "version": "1.0",
  "permissions":[
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://chatgpt.com/backend-api/*"
  ],
    "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
   "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}